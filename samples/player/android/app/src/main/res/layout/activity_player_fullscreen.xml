<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/playerActivityContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/playerContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/fakeContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#FFF"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:theme="@style/ThemeOverlay.AppCompat.Light"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playerContainer">

        <Button
            android:id="@+id/enterEnrichedMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:text="Enriched Mode"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Lorem Ipsum"
            android:textAllCaps="true"
            android:textColor="#000"
            android:textSize="20sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Ut cursus ut velit quis imperdiet. Ut quis aliquam velit, ut interdum ante. Donec auctor euismod sapien vel malesuada. Proin quis interdum purus. Vestibulum fermentum, risus in tincidunt bibendum, tellus massa auctor nibh, ut molestie dui urna ac dui. Suspendisse potenti. Mauris viverra, augue et sagittis vestibulum, elit ligula pharetra odio, eget malesuada purus dui ac felis. Pellentesque commodo nunc quis varius pellentesque. Duis interdum, mauris ut consequat malesuada, massa erat vestibulum orci, et ultricies nibh mauris at tortor. Orci varius natoque penatibus et magnis dis parturient montes, nascetur ridiculus mus. Cras vel ligula id nibh mollis iaculis at eu nunc. Class aptent taciti sociosqu ad litora torquent per conubia nostra, per inceptos himenaeos. Nulla ac dolor velit. Interdum et malesuada fames ac ante ipsum primis in faucibus. Integer porttitor semper neque, quis viverra neque volutpat a."
            android:textColor="#000"
            android:textSize="14sp"
            tools:ignore="HardcodedText" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>